		<class>mz.sisge.modelo.Classe</class>
		<class>mz.sisge.modelo.Disciplina</class>
		<class>mz.sisge.modelo.Disciplina_Classe</class>
		<class>mz.sisge.modelo.Professor</class>
		<class>mz.sisge.modelo.Professor_Disciplina_Classe</class>
		<class>mz.sisge.modelo.Sala</class>
		<class>mz.sisge.modelo.Turma</class>
		<class>mz.sisge.modelo.Vaga</class>
		<class>mz.sisge.modelo.Aluno_Turma</class>
		<class>mz.sisge.modelo.Pauta</class>
